{
  "name": "radorderpad-emr-extension",
  "version": "1.0.0",
  "description": "HIPAA-compliant patient data transfer",
  "scripts": {
    "build": "webpack --mode production && node scripts/copy-icons.js",
    "build:secure": "npm run security:check && webpack --mode production && node scripts/copy-icons.js",
    "build:deploy": "webpack --mode production",
    "deploy": "npm run build:deploy && echo 'Extension built successfully! Check dist/ folder for deployment files.'",
    "dev": "webpack --mode development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration",
    "test:security": "jest test/security",
    "test:compliance": "jest test/compliance",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:chrome": "cypress run --browser chrome",
    "test:puppeteer": "jest test/integration/emr-integration.test.ts --testTimeout=60000",
    "test:all": "npm run test && npm run test:puppeteer",
    "test:quick": "npm run test:unit && npm run test:integration",
    "test:full": "npm run test:all",
    "lint": "eslint src/**/*.ts",
    "lint:security": "eslint src/**/*.ts --config .eslintrc.security.json",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "audit": "npm audit --production",
    "security:check": "npm run audit && npm run lint:security",
    "clean": "rm -rf build dist",
    "package": "npm run build && npm run test:all && zip -r radorderpad-extension.zip dist/",
    "serve:test": "http-server test/fixtures -p 8080 -c-1",
    "test:performance": "jest test/performance"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@types/chrome": "^0.0.246",
    "@types/crypto-js": "^4.1.2",
    "@types/jest": "^29.5.5",
    "@types/node": "^24.0.7",
    "@types/puppeteer": "^5.4.7",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "copy-webpack-plugin": "^11.0.0",
    "crypto-js": "^4.1.1",
    "cypress": "^13.6.0",
    "eslint": "^8.49.0",
    "eslint-plugin-security": "^1.7.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-extended": "^3.2.4",
    "puppeteer": "^24.11.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "humanparser": "^2.7.0",
    "libphonenumber-js": "^1.12.9",
    "parse-address": "^1.1.2",
    "validator": "^13.15.15"
  }
}
